<h1>Ingredients</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
<th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.name, ingredient_path(ingredient)%></td>
        <td><%= ingredient.description %></td>

        <td>
          <%= link_to 'edit', edit_ingredient_path(ingredient), class:"btn btn-warning" %>
        </td>
          
        <td>
          <%= link_to 'delete', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Ingredient', new_ingredient_path, class:"btn btn-success" %>
