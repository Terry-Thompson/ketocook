<h1>Recipes</h1>
<%= link_to 'New Recipe', new_user_recipe_path(@user), class:"btn btn-success" %>

<br>
<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
<th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, user_recipe_path(@user, recipe)%>
        </td>

        <td><%= recipe.description %></td>

        <td>
          <p><%= link_to 'edit', edit_user_recipe_path(@user,recipe), class:"btn btn-warning" %></p>
        </td>
        
        <td>
          <%= link_to 'delete',user_recipe_path(@user,recipe), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

